<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_wrapper_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_wrapper_bg" >
    
    <TextView
        android:id="@+id/txt_dialog_common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="-10dp"
        android:text="@string/app_name"
        style="@style/DialogTitleText" />
    
    <LinearLayout
        android:id="@+id/dialog_content_area_aaa"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_dialog_common_title"
        android:layout_below="@id/txt_dialog_common_title" >
    </LinearLayout>
    
    <ImageButton
        android:id="@+id/btn_dialog_common_close_xxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/dialog_content_area_aaa"
        android:layout_above="@id/dialog_content_area_aaa"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/button_dialog_close"
        android:contentDescription="@string/image_desc_dialog_close_button" />
    
</RelativeLayout>
